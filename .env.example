# Environment Configuration Template
# Copy this file to .env.staging or .env.production and fill in the values

# Application
APP_NAME=violence-detection
APP_ENV=production  # or staging
DEBUG=false

# Server
SERVER_IP=31.57.166.18
APP_PORT=8000  # 8000 for production, 8001 for staging

# Domain
DOMAIN=vision.nexaratech.io  # or stagingvision.nexara.io

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexara_vision
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Model Path
MODEL_PATH=/home/admin/Downloads/best_model.h5

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=vision.nexaratech.io,stagingvision.nexara.io

# File Upload
MAX_UPLOAD_SIZE=100M
UPLOAD_DIR=/tmp/uploads

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Keys (if needed)
# API_KEY=your-api-key-here

# TensorFlow
TF_CPP_MIN_LOG_LEVEL=2
PYTHONUNBUFFERED=1

# Docker
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
